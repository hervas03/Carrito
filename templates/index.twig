{% extends "layouts/public.twig" %}

{% block title %}Index{% endblock %}

{% block content %}
<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel" data-interval="100">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
            aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
            aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
            aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/2DAW/Carrito/assets/imagenes/rc1.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption">
                <div class="fs-1 pb-3">Nuestros RC
                    <br>
                    <button class="btn btn-danger"> Saber mas </button>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img src="/2DAW/Carrito/assets/imagenes/drone1.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption">
                <div class="fs-1 pb-3">Nuestros drones
                    <br>
                    <button class="btn btn-danger"> Saber mas </button>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img src="/2DAW/Carrito/assets/imagenes/barcoRC.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption">
                <div class="fs-1 pb-3">Nuestros brarcos RC
                    <br>
                    <button class="btn btn-danger"> Saber mas </button>
                </div>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

{% endblock %}