{% extends "layouts/admin.twig" %}

{% block title %}Admin Edit Zone{% endblock %}

{% block content %}	
<br><br>
<div class="container w-50">
  <div class="abs-center border border-dark">
    <form action="{{ URL }}/categoria/update" method="POST" class="border p-3 form">
    <div class="form-group p-3 d-none">
        <label for="id">Id</label>
        <input type="text" name="id" id="id" class="form-control border-dark" value="{{ categoria.id_categorias }}">
      </div>
      <div class="form-group p-3">
        <label for="nombre">Nombre</label>
        <input type="text" name="nombre" id="nombre" class="form-control border-dark" value="{{ categoria.nombre_categoria }}">
      </div>
      <div class="form-group p-3">
      <button type="submit" class="btn btn-primary">Actualizar</button>
      </div>
    </form>
  </div>
</div>
{% endblock %}