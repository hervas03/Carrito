{% extends "layouts/admin.twig" %}

{% block title %}Admin Edit Zone{% endblock %}

{% block content %}	
<br><br>
<div class="container w-50">
  <div class="abs-center border border-dark">
    <form action="{{ URL }}?controller=productos&action=create" method="POST" class="border p-3 form">
      <div class="form-group p-3 d-none">
        <label for="id">Id</label>
        <input type="text" name="id" id="id" class="form-control border-dark">
      </div>
      <div class="form-group p-3">
        <label for="nombre">Nombre</label>
        <input type="text" name="nombre" id="nombre" class="form-control border-dark">
      </div>
      <div class="form-group p-3">
        <label for="descripcion">Descripcion</label>
        <input type="text" name="descripcion" id="descripcion" class="form-control border-dark">
      </div>
      <div class="form-group p-3">
        <label for="precio">Precio</label>
        <input type="text" name="precio" id="precio" class="form-control border-dark">
      </div>
      <div class="form-group p-3">
        <label for="stock">Stock</label>
        <input type="text" name="stock" id="stock" class="form-control border-dark">
      </div>
      <div class="form-group p-3">
        <label for="categoria">Categoria</label>
        <input type="text" name="categoria" id="categoria" class="form-control border-dark">
      </div>
      <div class="form-group p-3">
      <button type="submit" class="btn btn-primary">Crear</button>
      </div>
    </form>
  </div>
</div>
{% endblock %}