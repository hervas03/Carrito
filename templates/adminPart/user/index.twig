{% extends "layouts/admin.twig" %}

{% block title %}Admin Zone{% endblock %}

{% block content %}	
<br><br>
    <!-- cart -->
	<div class="cart-section mt-150 mb-150">
		<div class="container">
         
         <p><a href="{{ URL }}user/createUser" class="btn btn-primary">Crear</a></p>
         
			<div class="row">
				<div class="col-lg-12 col-md-12">
					<div class="cart-table-wrap">
						<table class="table {#table-bordered#}"> 
							<thead>
								<tr>
								<th class="col col-auto" scope="col">Id</th>
								<th class="col col-auto" scope="col">Nombre</th>
								<th class="col col-auto" scope="col">Apellido</th>
								<th class="col col-auto" scope="col">Email</th>
								<th class="col col-auto" scope="col">Rol</th>
								<th class="col col-auto" scope="col"></th>
								</tr>
							</thead>
							<tbody>
							{% for u in users %}
								<tr>
								<th scope="row">{{ u.id }}</th>
								<td>{{ u.nombre }}</td>
								<td>{{ u.apellido }}</td>
								<td>{{ u.email }}</td>
								<td>{{ u.rol }}</td>
								<td class="justify-content-end">
								 	<a href="{{ URL }}user/edit&id={{ u.id }}" class="btn btn-secondary w-25">Edit</a>
									<a href="{{ URL }}user/delete&id={{ u.id }}" class="btn btn-danger w-25">Delete</a>
								</td>
								</tr>
							{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end cart --> 
{% endblock %}